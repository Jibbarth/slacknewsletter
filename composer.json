{
    "name": "jibbarth/slacknewsletter",
    "type": "project",
    "authors": [
        {
            "name": "Jib√© Barth",
            "email": "barth.jib@gmail.com"
        }
    ],
    "require": {
        "symfony/thanks": "^1.0"
    },
    "require-dev": {
        "phpro/grumphp": "^0.12.1",
        "phpmd/phpmd": "^2.6",
        "brainmaestro/composer-git-hooks": "^2.4",
        "composer/composer": "^1.6",
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "sebastian/phpcpd": "^3.0",
        "sensiolabs/security-checker": "^4.1"
    },
    "scripts": {
        "cghooks": "vendor/bin/cghooks",
        "install-src": [
            "composer install --working-dir src"
        ],
        "post-install-cmd": [
            "cghooks add --ignore-lock",
            "@install-src"
        ],
        "post-update-cmd": [
            "cghooks update",
            "@install-src"
        ]
    },
    "extra": {
        "hooks": {
            "post-merge": "composer update"
        }
    }
}
